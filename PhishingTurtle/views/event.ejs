<!-- JavaScript for the modal and password submission -->
<script>
function openPrompt() {
    var exampleLastName =parseInt(document.getElementById('exampleLastName').value);
    console.log(exampleLastName);
    if(exampleLastName < 500000){
        alert("참여금액이 너무 적습니다.");
        document.getElementById('exampleLastName').focus();
    }
    else document.getElementById('myModal').style.display = 'block';
}

function submitPassword() {
    var accountPW = document.getElementById('maskedPW').value;
    if (accountPW) {
        document.getElementById('accountPW').value = accountPW;
        document.getElementById('send').submit();
    } else {
        alert("Transfer password is required to proceed.");
    }
    document.getElementById('myModal').style.display = 'none';
}

</script>